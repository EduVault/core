{
  "name": "app",
  "version": "0.1.0",
  "private": false,
  "dependencies": {
    "@eduvault/sdk-js": "^0.2.5",
    "@material-ui/core": "^4.12.3",
    "@material-ui/icons": "^4.11.2",
    "@reduxjs/toolkit": "^1.7.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6",
    "react-router-dom": "^6.2.1",
    "react-scripts": "4.0.3",
    "ulid": "^2.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@testing-library/dom": "^8.11.1",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.5",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.3.2",
    "isomorphic-fetch": "^3.0.0",
    "msw": "^0.36.3",
    "typescript": "^4.5.4"
  },
  "scripts": {
    "dev": "HTTPS=true HTTPS=true SSL_CRT_FILE=../deploy/certs/cert.pem SSL_KEY_FILE=../deploy/certs/key.pem dotenv -e ../dev.env react-scripts start",
    "---": "------- on a small server/docker might want to change to: --max_old_space_size=1024 -----",
    "build": "react-scripts build",
    "test:watch": "react-scripts test --env=./jest-env.js --watchAll",
    "test": "CI=true react-scripts test --coverage --env=./jest-env.js --watchAll=false",
    "test:clear-cache": "react-scripts test --clearCache",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "msw": {
    "workerDirectory": "public"
  },
  "jest": {
    "transformIgnorePatterns": [
      "/node_modules/(?!@eduvault/sdk-js)/"
    ]
  }
}
